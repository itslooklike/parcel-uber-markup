{
  "name": "parcel-uber-markup",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.pug",
  "browserslist": [">1% in RU", "ios 8"],
  "scripts": {
    "start": "parcel src/index.pug --no-cache",
    "prebuild": "rm -rf dist .cache",
    "build": "npm run prebuild && parcel build src/index.pug --public-url ./ --no-cache",
    "static": "static dist",
    "c": "rm -rf node_modules .cache",
    "ci": "npm run c && npm i",
    "cis": "npm run ci && npm start",
    "lint": "stylelint ./src/**/*.scss",
    "n:index": "mv ./dist/parcel-uber-markup.html ./dist/index.html",
    "n:send": "now './dist' -A ../now.json -t $NOW_TOKEN",
    "n:alias": "now alias -t $NOW_TOKEN",
    "n:remove": "now rm 'uber-parcel' -s -y -t $NOW_TOKEN",
    "deploy": "npm run n:index && npm run n:send && npm run n:alias && npm run n:remove"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.6",
    "intersection-observer": "^0.5.0",
    "node-sass": "^4.8.2",
    "node-static": "^0.7.10",
    "normalize.css": "^7.0.0",
    "now": "^10.2.1",
    "parcel-bundler": "^1.6.2",
    "parcel-plugin-pug": "^0.2.8",
    "postcss-custom-media": "^6.0.0",
    "postcss-font-family-system-ui": "^3.0.0",
    "postcss-image-set-polyfill": "^0.4.4",
    "prettier": "^1.11.1",
    "stylelint": "^8.4.0",
    "stylelint-config-idiomatic-css": "^1.0.5",
    "stylelint-config-recommended-scss": "^3.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^2.5.0",
    "tslib": "^1.9.0",
    "typescript": "^2.7.2"
  }
}
