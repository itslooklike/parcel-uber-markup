extends pug/layout-main.pug
include pug/card.pug

block meta
  title Uber Eats - большой выбор ресторанов и кафе
  meta(
    name="description"
    content="Огромный выбор ресторанов на любой вкус. Корейская, Японская и множество других"
    )
  meta(name="keywords" content="ресторан, суши, пицца, пятница, ужин")

  meta(property='og:type', content='website')
  meta(property='og:locale', content='ru_RU')
  meta(property='og:title', content='Огромный выбор ресторанов')
  meta(property='og:description', content='Выбери себе еду с доставкой на дом, из огромного выбора ресторанов')
  meta(property='og:url', content='http://localhost:1234/')
  meta(property='og:image', content='http://localhost:1234/frontend-cover-new-year-fb.png')
  meta(property='vk:image', content='http://localhost:1234//frontend-cover-new-year-vk.png')
  meta(name='twitter:card', content='localhost')
  meta(name='twitter:site', content='@localhost')
  meta(name='twitter:creator', content='@localhost')

block content
  main.page-stores
    section.common-content.page-stores__content
      .page-stores__search-block
        .page-stores__search-wrap
          .form-search
            label.form-search__label
              input.form-search__input(type='text' placeholder='Search for restaurant or cuisine')
        .page-stores__delivery-wrap
          .page-stores__delivery-time
            .form-input-label
              span.form-input-label__title When
              .form-input-label__content
                button.button.button--secondary
                  span ASAP
          .page-stores__delivery-address
            .form-input-label
              span.form-input-label__title To
              .form-input-label__content
                .form-input-address
                  label.form-input-address__label
                    input.form-input-address__input(type='text' value='ul. Bolshaya Dmitrovka,22')
      .page-stores__title-wrap
        h1.common-h1 Moscow Restaurants
      .page-stores__grid-wrap
        .page-stores__grid
          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('Макдоналдс — Газетный', '₽₽ • Бургеры', '25 - 35 Min')
              img.card__img(src='./assets/restaurants/restaurant-mcdonalds.png', alt='Макдоналдс — Газетный')

          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('DimSum & Co — ЦДМ', '₽ • Японская • Китайская • Азиатская', '40 - 50 Min')
              img.card__img(src='./assets/restaurants/restaurant-dimsum.png', alt='DimSum & Co — ЦДМ')

          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('ДвижОК — Манежная', '₽ • Американская • Европейская', '35 - 45 Min')
              img.card__img(src='./assets/restaurants/restaurant-dvizhok.png', alt='ДвижОК — Манежная')

          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('НЯ — NHA', '₽₽ • Вьетнамская', '30 - 40 Min')
              img.card__img(src='./assets/restaurants/restaurant-nya.png', alt='НЯ — NHA')

          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('Точка Дзы — Цветной', '₽₽ • Вьетнамская', '40 - 50 Min')
              img.card__img(src='./assets/restaurants/restaurant-dotdzi.png', alt='Точка Дзы — Цветной')

          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('Cinnabon', '₽ • Выпечка • Десерты • Капкейки', '25 - 35 Min')
              img.card__img(src='./assets/restaurants/restaurant-cinnabon.png', alt='Cinnabon')

          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('PIZZELOVE', '₽₽ • Пицца', '15 - 25 Min')
              img.card__img(src='./assets/restaurants/restaurant-pizzelove.png', alt='PIZZELOVE')

          a.page-stores__grid-card(href="page-restaurant.pug")
            +card('Zю кафе — Тверская', '₽₽ • Японская', '25 - 35 Min')
              img.card__img(src='./assets/restaurants/restaurant-zu.png', alt='Zю кафе — Тверская')

          a.page-stores__grid-card(href="page-restaurant.pug")
